{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "installedESLint": true,
  "rules": {
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "STRING"
        ]
      }
    ],
    "max-len": [
      "error",
      120
    ],
    "no-mixed-operators": [
      "error", {
        "allowSamePrecedence": true
      }
    ],
    "consistent-return": [
      "error", {
        "treatUndefinedAsUnspecified": true
      }
    ]
  },
  "globals": {
    // ignore these mocha globals
    "describe": false,
    "before": false,
    "beforeEach": false,
    "it": false,
    "after": false,
    "afterEach": false
  }
}